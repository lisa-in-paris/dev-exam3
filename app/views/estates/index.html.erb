<p id="notice"><%= notice %></p>

<h1>Realestate information</h1>

<table>
  <thead>
    <tr>
      <th>Name of property</th>
      <th>Rent</th>
      <th>Address</th>
      <th>Age of building</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estates.each do |estate| %>
      <tr>
        <td><%= estate.name %></td>
        <td><%= estate.rent %></td>
        <td><%= estate.address %></td>
        <td><%= estate.years %></td>
        <td><%= estate.remarks %></td>
        <td><%= link_to 'Details', estate %></td>
        <td><%= link_to 'Edit', edit_estate_path(estate) %></td>
        <td><%= link_to 'Delate', estate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

